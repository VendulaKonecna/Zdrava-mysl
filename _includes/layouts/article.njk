---
layout: layouts/template.njk
---
<div class="container">
    <!--BREADSCRUMBS-->
    <nav class="breadcrumbs">
        <ul class="breadcrumbs__list">
            <li class="breadcrumbs__item" ><a class="breadcrumbs__link" href="/">Domů</a></li><!--
            --><li class="breadcrumbs__item" ><a class="breadcrumbs__link" href="/clanky/">Články</a></li><!--
            --><li class="breadcrumbs__item"> {{ title }} </li>
        </ul>
    </nav>

    <article class="article">

        <div class="img">
            <img class="article__img" src="/images/{{img}}"  alt="{{alt}}">
        </div>
        
        <div class="article__content" >
            <h2 class="article__title"> {{ title }} </h2>
            <p class="article__perex"> {{ perex }} </p>
        </div>

        <div class="article__text">
            {{ content | safe }}

            {% include 'partials/btn.njk' %}  
        </div>

        
        <aside class="articles__container right">
            <p>Nejnovější články</p>

            <div class="articles__new aside">
                {% for prispevek in collections.clanky | reverse | limit(3) %}

                <div class="article--wrapp">
                    <a href="{{ prispevek.url }}" class="article__link">
                        <img src="/images/{{ prispevek.data.img }}" class="article__img--wrap" alt="{{ prispevek.data.alt }}">
                        <div class="article__content--wrap">
                            <div class="article__text--wrap">
                                <h2 class="article__heading--wrapp"> {{ prispevek.data.title }} </h2>
                                <p class="article__perex"> {{ prispevek.data.perex }}</p>
                            </div>
                            <div class="article__more">
                                <a href="{{ prispevek.url }}" class="article__more">Pokračovat ve čtení</a>
                            </div>
                        </div>
                    </a> 
                </div>
                
                {% endfor %}
            </div>
        </aside>

    </article>  
</div>

